profile {
    # Laptop Screen
    output "eDP-1" mode 1920x1080 position 0,1080 scale 1

    # External Monitor (to the left of the laptop screen)
    output "HDMI-A-1" mode 1920x1080@120Hz position 0,0 scale 1
}

profile {
    # Laptop Screen
    output "eDP-1" mode 1920x1080 position 0,1080 scale 1

    # External Monitor (to the left of the laptop screen)
    output "DP-1" mode 1920x1080@144Hz position 0,0 scale 1
}

profile {
    output "DP-1" mode 1920x1080@144Hz position 0,0 scale 1
}
